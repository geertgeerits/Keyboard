<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Keyboard"
    x:Class="Keyboard.PageKeyboardHexadecimalSample"
    Loaded="OnPageLoaded"
    Shell.BackgroundColor="{AppThemeBinding Light=LightBlue, Dark=Blue}">

    <Shell.TitleView>
        <Grid
            ColumnDefinitions="*, 60, 60"
            RowDefinitions="*"
            Padding="0">

            <Label
                Grid.Column="0"
                Grid.Row="0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                FontSize="16"  
                FontAttributes="Bold"  
                Margin="0"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                Text="Keyboard hexadecimal">
            </Label>

            <ImageButton
                x:Name="imgbtnToggleKeyboard"
                Style="{StaticResource ToggleKeyboardImageButton}"
                Grid.Column="2"  
                Grid.Row="0"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="10"
                IsVisible="False"
                Clicked="ImgbtnToggleKeyboard_Clicked">
            </ImageButton>
        </Grid>
    </Shell.TitleView>

    <AbsoluteLayout>
        <!--!!!BUG!!! VerticalOptions must be set to "FillAndExpand" - with only "Fill" scrolling does not work
        https://www.youtube.com/watch?v=Lb8xZ_jHTjY ; https://www.youtube.com/watch?v=Lb8xZ_jHTjY -->
        <ScrollView
            VerticalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All">

            <Grid
                ColumnDefinitions="300, *"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, 100"
                ColumnSpacing="2"  
                RowSpacing="10"  
                Margin="5">


                <Border  
                    Style="{StaticResource EntryBorder}"
                    Grid.Column="0"
                    Grid.Row="1">

                    <Entry  
                        x:Name="entTest1"
                        Style="{StaticResource NumericEntry}"
                        AutomationId="entTest1-Percentage"
                        Placeholder="0 - FF"
                        MaxLength="2"
                        Text=""
                        TextChanged="NumberEntryTextChanged"
                        Focused="NumberEntryFocused"  
                        Unfocused="NumberEntryUnfocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:HexadecimalValidationTriggerAction MinValue="0" MaxValue="FF"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Border  
                    Style="{StaticResource EntryBorder}"
                    Grid.Column="0"
                    Grid.Row="2">

                    <Entry  
                        x:Name="entTest2"
                        Style="{StaticResource NumericEntry}"
                        AutomationId="entTest2"
                        Placeholder="0 - FFFF"
                        MaxLength="4"
                        Text=""
                        TextChanged="NumberEntryTextChanged"
                        Focused="NumberEntryFocused"  
                        Unfocused="NumberEntryUnfocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:HexadecimalValidationTriggerAction MinValue="0" MaxValue="FFFF"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Border  
                    Style="{StaticResource EntryBorder}"
                    Grid.Column="0"
                    Grid.Row="3">

                    <Entry  
                        x:Name="entTest3"
                        Style="{StaticResource NumericEntry}"
                        AutomationId="entTest3"
                        Placeholder="0 - FFFFFF"
                        MaxLength="6"
                        Text=""
                        TextChanged="NumberEntryTextChanged"
                        Focused="NumberEntryFocused"  
                        Unfocused="NumberEntryUnfocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:HexadecimalValidationTriggerAction MinValue="0" MaxValue="FFFFFF"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Border  
                    Style="{StaticResource EntryBorder}"
                    Grid.Column="0"
                    Grid.Row="4">

                    <Entry  
                        x:Name="entTest4"
                        Style="{StaticResource NumericEntry}"
                        AutomationId="entTest4"
                        Placeholder="0 - FFFFFFFF"
                        MaxLength="12"
                        Text=""
                        TextChanged="NumberEntryTextChanged"
                        Focused="NumberEntryFocused"  
                        Unfocused="NumberEntryUnfocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:HexadecimalValidationTriggerAction MinValue="0" MaxValue="FFFFFFFF"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Label
                    Grid.Column="0"
                    Grid.Row="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Text="PageKeyboardHexadecimalSample">
                </Label>

            </Grid>
        </ScrollView>

        <ContentView
            x:Name="CustomKeyboardHexadecimalPortrait"
            Style="{StaticResource BottomSheetKeyboard}"
            AbsoluteLayout.LayoutBounds="0,1,1,240">

            <local:KeyboardHexadecimalPortrait
                HeightRequest="240">
            </local:KeyboardHexadecimalPortrait>
        </ContentView>

        <ContentView
            x:Name="CustomKeyboardHexadecimalLandscape"
            Style="{StaticResource BottomSheetKeyboard}"
            AbsoluteLayout.LayoutBounds="0,1,1,90">

            <local:KeyboardHexadecimalLandscape
                HeightRequest="94">
            </local:KeyboardHexadecimalLandscape>
        </ContentView>        

    </AbsoluteLayout>
</ContentPage>