<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Keyboard"
    x:Class="Keyboard.KeyboardHexadecimalPortrait"
    x:Name="RootKeyboardHexadecimalPortrait">

    <Grid  
        ColumnDefinitions="50, Auto, Auto, Auto, Auto, Auto, 50"
        RowDefinitions="Auto, Auto, Auto, Auto"  
        ColumnSpacing="2"  
        RowSpacing="2"  
        Margin="0"
        Padding="10,12,10,10"
        HorizontalOptions="Center">

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="1"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnZero"
                Text="0"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="2"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnOne"
                Text="1"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="3"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnTwo"
                Text="2"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="4"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnThree"
                Text="3"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="5"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnFour"
                Text="4"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="1"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnFive"
                Text="5"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="2"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnSix"
                Text="6"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="3"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnSeven"
                Text="7"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="4"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnEight"
                Text="8"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="5"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnNine"
                Text="9"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="1"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnA"
                Text="A"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="2"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnB"
                Text="B"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="3"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnC"
                Text="C"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="4"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnD"
                Text="D"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="5"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnE"
                Text="E"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="1"  
            Grid.Row="3">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnF"
                Text="F"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="2"  
            Grid.Row="3">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnDecimalPoint"
                BackgroundColor="Transparent"
                Text=""
                IsEnabled="False"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="3"  
            Grid.Row="3">

            <Button  
                Style="{StaticResource KeyHexadecimalPortraitButton}"
                AutomationId="btnMinus"
                BackgroundColor="Transparent"
                Text=""
                IsEnabled="False"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="4"  
            Grid.Row="3">

            <ImageButton  
                Style="{StaticResource KeyHexadecimalPortraitImageButton}"
                AutomationId="btnBackspace"
                Source="{AppThemeBinding Light=backspace_32p_black.png, Dark=backspace_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <Border
            Style="{StaticResource KeyPortraitBorder}"
            Grid.Column="5"  
            Grid.Row="3">

            <ImageButton  
                Style="{StaticResource KeyHexadecimalPortraitImageButton}"
                AutomationId="btnReturn"
                Source="{AppThemeBinding Light=keyboard_tab_32p_black.png, Dark=keyboard_tab_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <ImageButton
            x:Name="ImgbtnKeyboardHide"
            Style="{StaticResource KeyboardHideImageButton}"
            Grid.Column="0"
            Grid.Row="3"
            Clicked="OnKeyboardHide_Clicked">
        </ImageButton>

    </Grid>
</ContentView>
