<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Keyboard"
    x:Class="Keyboard.KeyboardDecimalPortrait"
    x:Name="RootKeyboardDecimalPortrait"
    x:DataType="local:KeyboardDecimalPortrait">

    <Grid  
        ColumnDefinitions="50, Auto, Auto, Auto, Auto, 50"
        RowDefinitions="Auto, Auto, Auto, Auto"  
        ColumnSpacing="2"  
        RowSpacing="2"  
        Margin="{OnPlatform 0, Android='0,0,0,0', iOS='0,0,0,0'}"
        Padding="10,12,10,10"
        HorizontalOptions="Center">

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="1"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnOne"
                Text="{Binding ButtonOneText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="2"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnTwo"
                Text="{Binding ButtonTwoText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="3"  
            Grid.Row="0">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnThree"
                Text="{Binding ButtonThreeText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="4"  
            Grid.Row="0">

            <ImageButton  
                Style="{StaticResource KeyNumericPortraitImageButton}"
                AutomationId="btnBackspace"
                Source="{AppThemeBinding Light=backspace_32p_black.png, Dark=backspace_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="1"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnFour"
                Text="{Binding ButtonFourText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="2"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnFive"
                Text="{Binding ButtonFiveText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="3"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnSix"
                Text="{Binding ButtonSixText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="4"  
            Grid.Row="1">

            <ImageButton  
                Style="{StaticResource KeyNumericPortraitImageButton}"
                AutomationId="btnReturn"
                Source="{AppThemeBinding Light=keyboard_tab_32p_black.png, Dark=keyboard_tab_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="1"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnSeven"
                Text="{Binding ButtonSevenText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="2"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnEight"
                Text="{Binding ButtonEightText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="3"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnNine"
                Text="{Binding ButtonNineText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="4"  
            Grid.Row="2">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnMinus"
                Text="{Binding ButtonMinusText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="2"  
            Grid.Row="3">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnZero"
                Text="{Binding ButtonZeroText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyBorder}"
            Grid.Column="4"  
            Grid.Row="3">

            <Button  
                Style="{StaticResource KeyNumericPortraitButton}"
                AutomationId="btnDecimalPoint"
                Text="{Binding ButtonDecimalPointText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <ImageButton
            x:Name="ImgbtnKeyboardHide"
            Style="{StaticResource KeyboardHideImageButton}"
            Grid.Column="0"
            Grid.Row="3"
            Clicked="OnKeyboardHide_Clicked">
        </ImageButton>

    </Grid>
</ContentView>
