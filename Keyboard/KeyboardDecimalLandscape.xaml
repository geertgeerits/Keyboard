<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Keyboard"
    x:Class="Keyboard.KeyboardDecimalLandscape"
    x:Name="RootKeyboardDecimalLandscape"
    x:DataType="local:KeyboardDecimalLandscape">

    <Grid
        Style="{StaticResource KeyboardGrid}"
        ColumnDefinitions="40, 45, 45, 45, 45, 45, 45, 45, 45, 45, 45, 45, 45, 45, 45, 10"
        RowDefinitions="5, 55, 5">

        <BoxView
            Style="{StaticResource KeyboardGridBoxView}"
            Grid.ColumnSpan="16"
            Grid.RowSpan="3">
        </BoxView>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="1"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnOne"
                Text="{Binding ButtonOneText}"
                Clicked="BtnKey_Clicked">
                </Button>
            </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="2"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnTwo"
                Text="{Binding ButtonTwoText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="3"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnThree"
                Text="{Binding ButtonThreeText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="4"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnFour"
                Text="{Binding ButtonFourText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="5"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnFive"
                Text="{Binding ButtonFiveText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="6"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnSix"
                Text="{Binding ButtonSixText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="7"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnSeven"
                Text="{Binding ButtonSevenText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="8"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnEight"
                Text="{Binding ButtonEightText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="9"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnNine"
                Text="{Binding ButtonNineText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="10"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnZero"
                Text="{Binding ButtonZeroText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="11"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnDecimalPoint"
                Text="{Binding ButtonDecimalPointText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="12"  
            Grid.Row="1">

            <Button  
                Style="{StaticResource KeyNumericLandscape1RowButton}"
                AutomationId="btnMinus"
                Text="{Binding ButtonMinusText}"
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="13"  
            Grid.Row="1">

            <ImageButton  
                Style="{StaticResource KeyNumericLandscape1RowImageButton}"
                AutomationId="btnBackspace"
                Source="{AppThemeBinding Light=backspace_32p_black.png, Dark=backspace_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <Border
            Style="{StaticResource KeyLandscape1RowBorder}"
            Grid.Column="14"  
            Grid.Row="1">

            <ImageButton  
                Style="{StaticResource KeyNumericLandscape1RowImageButton}"
                AutomationId="btnReturn"
                Source="{AppThemeBinding Light=keyboard_tab_32p_black.png, Dark=keyboard_tab_32p_white.png}"
                Clicked="BtnKey_Clicked">
            </ImageButton>
        </Border>

        <ImageButton
            x:Name="ImgbtnKeyboardHide"
            Style="{StaticResource KeyboardHideImageButton}"
            Grid.Column="0"
            Grid.Row="1"
            Clicked="OnKeyboardHide_Clicked">
        </ImageButton>

    </Grid>
</ContentView>
