<the49:BottomSheet
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Keyboard.BottomSheetKeyboard"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Padding="0,15,0,0" Background="LightGray" BackgroundColor="Lightgray"
    HasHandle="True" HandleColor="Blue">

    <the49:BottomSheet.Detents>
        <the49:ContentDetent IsDefault="True" />
        <the49:MediumDetent />
    </the49:BottomSheet.Detents>

    <Grid  
        ColumnDefinitions="Auto, Auto, Auto, Auto"  
        RowDefinitions="Auto, Auto, Auto, Auto"  
        ColumnSpacing="2"  
        RowSpacing="2"  
        Margin="5"
        HorizontalOptions="Center">

        <Button  
            x:Name="btnOne"
            AutomationId="btnOne"
            Grid.Column="0"  
            Grid.Row="0"  
            Text="1"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnTwo"
            AutomationId="btnTwo"
            Grid.Column="1"  
            Grid.Row="0"  
            Text="2"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnThree"
            AutomationId="btnThree"
            Grid.Column="2"  
            Grid.Row="0"  
            Text="3"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnDelete"
            AutomationId="btnDelete"
            Grid.Column="3"  
            Grid.Row="0"  
            Text="&lt;x"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnFour"
            AutomationId="btnFour"
            Grid.Column="0"  
            Grid.Row="1"  
            Text="4"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnFive"
            AutomationId="btnFive"
            Grid.Column="1"  
            Grid.Row="1"  
            Text="5"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnSix"
            AutomationId="btnSix"
            Grid.Column="2"  
            Grid.Row="1"  
            Text="6"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnReturn"
            AutomationId="btnReturn"
            Grid.Column="3"  
            Grid.Row="1"  
            Text="Next"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnSeven"
            AutomationId="btnSeven"
            Grid.Column="0"  
            Grid.Row="2"  
            Text="7"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnEight"
            AutomationId="btnEight"
            Grid.Column="1"  
            Grid.Row="2"  
            Text="8"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnNine"
            AutomationId="btnNine"
            Grid.Column="2"  
            Grid.Row="2"  
            Text="9"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnMinus"
            AutomationId="btnMinus"
            Grid.Column="3"  
            Grid.Row="2"  
            Text="-"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnZero"
            AutomationId="btnZero"
            Grid.Column="1"  
            Grid.Row="3"  
            Text="0"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnDecimalPoint"
            AutomationId="btnDecimalPoint"
            Grid.Column="3"  
            Grid.Row="3"  
            Text=".,"
            Clicked="BtnKey_Clicked">
        </Button>
    </Grid>

</the49:BottomSheet>