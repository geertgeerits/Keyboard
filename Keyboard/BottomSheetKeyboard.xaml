<the49:BottomSheet
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Keyboard.BottomSheetKeyboard"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Padding="0,15,0,0" Background="LightGray" BackgroundColor="Lightgray"
    HasHandle="True" HandleColor="Blue">

    <the49:BottomSheet.Detents>
        <the49:ContentDetent IsDefault="True" />
        <the49:MediumDetent />
    </the49:BottomSheet.Detents>

    <Grid  
        ColumnDefinitions="Auto, Auto, Auto, Auto"  
        RowDefinitions="Auto, Auto, Auto, Auto"  
        ColumnSpacing="2"  
        RowSpacing="2"  
        Margin="5"
        HorizontalOptions="Center">

        <Border
            Style="{StaticResource KeyBorder}">

            <Button  
                x:Name="btnOne"
                Style="{StaticResource KeyButton}"
                AutomationId="btnOne"
                Grid.Column="0"  
                Grid.Row="0"  
                Text="1"  
                Clicked="BtnKey_Clicked">
            </Button>
        </Border>


        <Button  
            x:Name="btnTwo"
            Style="{StaticResource KeyButton}"
            AutomationId="btnTwo"
            Grid.Column="1"  
            Grid.Row="0"  
            Text="2"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnThree"
            Style="{StaticResource KeyButton}"
            AutomationId="btnThree"
            Grid.Column="2"  
            Grid.Row="0"  
            Text="3"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnBackspace"
            Style="{StaticResource KeyButton}"
            AutomationId="btnBackspace"
            Grid.Column="3"  
            Grid.Row="0"
            ImageSource="{AppThemeBinding Light=backspace_48p_black.png, Dark=backspace_48p_white.png}"
            ContentLayout="Left, 10"
            Text=" "
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnFour"
            Style="{StaticResource KeyButton}"
            AutomationId="btnFour"
            Grid.Column="0"  
            Grid.Row="1"  
            Text="4"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnFive"
            Style="{StaticResource KeyButton}"
            AutomationId="btnFive"
            Grid.Column="1"  
            Grid.Row="1"  
            Text="5"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnSix"
            Style="{StaticResource KeyButton}"
            AutomationId="btnSix"
            Grid.Column="2"  
            Grid.Row="1"  
            Text="6"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnReturn"
            Style="{StaticResource KeyButton}"
            AutomationId="btnReturn"
            Grid.Column="3"  
            Grid.Row="1"  
            ImageSource="{AppThemeBinding Light=keyboard_tab_48p_black.png, Dark=keyboard_tab_48p_white.png}"
            ContentLayout="Left, 10"
            Text=" "
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnSeven"
            Style="{StaticResource KeyButton}"
            AutomationId="btnSeven"
            Grid.Column="0"  
            Grid.Row="2"  
            Text="7"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnEight"
            Style="{StaticResource KeyButton}"
            AutomationId="btnEight"
            Grid.Column="1"  
            Grid.Row="2"  
            Text="8"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnNine"
            Style="{StaticResource KeyButton}"
            AutomationId="btnNine"
            Grid.Column="2"  
            Grid.Row="2"  
            Text="9"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnMinus"
            Style="{StaticResource KeyButton}"
            AutomationId="btnMinus"
            Grid.Column="3"  
            Grid.Row="2"  
            Text="-"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnZero"
            Style="{StaticResource KeyButton}"
            AutomationId="btnZero"
            Grid.Column="1"  
            Grid.Row="3"  
            Text="0"  
            Clicked="BtnKey_Clicked">
        </Button>

        <Button  
            x:Name="btnDecimalPoint"
            Style="{StaticResource KeyButton}"
            AutomationId="btnDecimalPoint"
            Grid.Column="3"  
            Grid.Row="3"  
            Text=".,"
            Clicked="BtnKey_Clicked">
        </Button>
    </Grid>

</the49:BottomSheet>